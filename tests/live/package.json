{
  "name": "@oauth-server/live-tests",
  "version": "1.0.0",
  "description": "Live integration tests for OAuth 2.1 IdP",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:browser": "playwright test",
    "test:browser:headed": "playwright test --headed",
    "test:browser:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:browser",
    "playwright:install": "playwright install chromium",
    "postinstall": "playwright install chromium",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0",
    "xml-crypto": "^6.1.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "jose": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
